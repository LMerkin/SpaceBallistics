FoamFile
{
  version       2.0;
  format        ascii;
  arch          "LSB;label=32;scalar=64";
  class         volScalarField;
  location      "0";
  object        p;
}
//===========================================================================//
#include        "../VarParams"

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform $__p0__;

boundaryField
{
  inLet
  {
    type        fixedValue;
    value       uniform $__p0__;
  }

  outLet
  {
    // XXX: Alternatively, we could use "waveTransmissive" here, but it leads
    // to run-time problems...
    type        zeroGradient;
  }

  diamondWall
  {
    type        zeroGradient;
  }

  backAndFront
  {
    type        empty;
  }
}
