#include "VarParams"
//===========================================================================//
dimensions      [0 0 0 1 0 0 0];

internalField   uniform __T0__;

boundaryField
{
  InLet
  {
    type        fixedValue;
    value       uniform __T0__;
  }

  OutLet
  {
    // "zeroGradient" for "T" is OK for all regimes:
    type        zeroGradient;
  }

  DiamondWall
  {
    // XXX: Since there is no flow normal to the Wall, we can assume that
    // there is no (normal) "T" gradient either:
    type        zeroGradient;
  }
}
