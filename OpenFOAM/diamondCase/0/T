FoamFile
{
  version       2.0;
  format        ascii;
  arch          "LSB;label=32;scalar=64";
  class         volScalarField;
  location      "0";
  object        T;
}
//===========================================================================//
#include "../VarParams"

dimensions      [0 0 0 1 0 0 0];

internalField   uniform $__T0__;

boundaryField
{
  inLet
  {
    type        fixedValue;
    value       uniform $__T0__;
  }

  outLet
  {
    // "zeroGradient" for "T" is OK for all regimes:
    type        zeroGradient;
  }

  diamondWall
  {
    // XXX: Since there is no flow normal to the Wall, we can assume that
    // there is no (normal) "T" gradient either:
    type        zeroGradient;
  }

  backAndFront
  {
    type        empty;
  }
}
