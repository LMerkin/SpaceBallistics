FoamFile
{
  version       2.0;
  format        ascii;
  arch          "LSB;label=32;scalar=64";
  class         volScalarField;
  location      "0";
  object        omega;
}
//===========================================================================//
dimensions      [0 0 -1 0 0 0 0];

// XXX: "omega" is related to turbulence properties; the value of 28.7 is
// approximate:
internalField   uniform 28.7;

boundaryField
{
  inLet
  {
    type        fixedValue;
    value       uniform 28.7;
  }

  outLet
  {
    type        zeroGradient;
  }

  diamondWall
  {
    type        omegaWallFunction;  // Required for walls
    value       uniform 28.7;
  }

  backAndFront
  {
    type        empty;
  }
}
