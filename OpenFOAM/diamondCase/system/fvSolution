FoamFile
{
  version     2.0;
  format      ascii;
  arch        "LSB;label=32;scalar=64";
  class       dictionary;
  location    "system";
  object      fvSolution;
}
//===========================================================================//
#include      "../VarParams"

solvers
{
  p
  {
    solver          PBiCGStab;
    preconditioner  DILU;
    tolerance       1e-8;
    relTol          1e-6;
    minIter         3;
    // Alt:
    // solver       GAMG;
    // smoother     GaussSeidel;
    // nPreSweeps   1;
    // nPostSweeps  2;
  }

  U
  {
    solver          PBiCGStab;
    preconditioner  DILU;
    tolerance       1e-8;
    relTol          1e-6;
    minIter         3;
  }

  h
  {
    solver          PBiCGStab;
    preconditioner  DILU;
    tolerance       1e-8;
    relTol          1e-6;
    minIter         3;
  }

  // XXX: Is this always correct?
  rho
  {
    solver          diagonal;
  }
}

SIMPLE
{
  // XXX: For some setups, the following params may do more harm than good:
  transonic         yes;
  consistent        yes;

  nOuterCorrectors  3;
  nCorrectors       3;
  nNonOrthogonalCorrectors 3;
  pMin              1e4;
  pMax              1e6;

  residualControl
  {
    p       1e-3;   // 1e-3 .. 1e-2
    U       5e-5;   // 1e-5 .. 1e-3
    h       5e-5;   // ditto
  }
}

relaxationFactors
{
  // XXX: May need to reduce them further? Especially for "rho"?
  fields
  {
    T       0.1;
    rho     0.01;   // 0.01 .. 0.1
  }

  equations
  {
    p       0.1;    // 0.1  .. 0.3
    U       0.1;
    h       0.1;
  }
}
