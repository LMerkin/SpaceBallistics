//===========================================================================//
#include "../VarParams"

solvers
{
  "p"
  {
    solver          GAMG;
    tolerance       1e-8;
    relTol          1e-6;
    smoother        GaussSeidel;
    nPreSweeps      1;
    nPostSweeps     2;
  }

  "U"
  {
    solver          PBiCG;
    preconditioner  DILU;
    tolerance       1e-8;
    relTol          1e-6;
  }

  "k"
  {
    solver          PBiCG;
    preconditioner  DILU;
    tolerance       1e-8;
    relTol          1e-6;
  }

  "omega"
  {
    solver          PBiCG;
    preconditioner  DILU;
    tolerance       1e-8;
    relTol          1e-6;
  }

  "h"
  {
    solver          PBiCG;
    preconditioner  DILU;
    tolerance       1e-8;
    relTol          1e-6;
  }
}

SIMPLE
{
  nOuterCorrectors  3;
  nCorrectors       3;
  nNonOrthogonalCorrectors 3;
  pMin              100;
  pMax              1e7;

  residualControl
  {
    p     5e-3;
    U     5e-3;
    k     5e-3;
    omega 5e-3;
    h     5e-3;
  }
}

relaxationFactors
{
  fields
  {
    T       0.3;
    p       0.3;
    rho     0.001;
  }

  equations
  {
    U       0.3;
    h       0.3;
    k       0.3;
    omega   0.3;
  }
}
