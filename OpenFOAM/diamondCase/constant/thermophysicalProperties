FoamFile
{
  version   2.0;
  format    ascii;
  arch      "LSB;label=32;scalar=64";
  class     dictionary;
  location  "constant";
  object    thermophysicalProperties;
}
//===========================================================================//
#include    "../VarParams"

thermoType
{
  type            hePsiThermo;
  mixture         pureMixture;
  transport       const;    // Viscosity is independent of T
  thermo          hConst;
  equationOfState perfectGas;
  specie          specie;
  energy          sensibleEnthalpy;
}

mixture
{
  specie
  {
    nMoles      1;          // XXX: Why do we really need this?
    molWeight   28.97;
  }

  thermodynamics
  {
    // Air Specific Heat Capacity at Constant Pressure:
    // Cp = R * gamma / (gamma - 1):
    Cp          1004.6848;

    // XXX: Hf is not needed (only used in combustion cases):
    Hf          0;
  }

  transport
  {
    // Prandtl number:
    Pr          $__Pr0__;
    mu          0;
  }
}

// IMPORTANT: Specify once again that the Mode is Steady:
dpdt no;
