FoamFile
{
  version   2.0;
  format    ascii;
  arch      "LSB;label=32;scalar=64";
  class     dictionary;
  location  "constant";
  object    thermophysicalProperties;
}
//===========================================================================//
#include    "../VarParams"

thermoType
{
  type            hePsiThermo;
  mixture         pureMixture;
  transport       sutherland;
  thermo          hConst;
  equationOfState perfectGas;
  specie          specie;
  energy          sensibleEnthalpy;
}

mixture
{
  specie
  {
    molWeight   28.97;
  }

  thermodynamics
  {
    // Air Specific Heat Capacity at Constant Pressure:
    // Cp = R * gamma / (gamma - 1):
    Cp          1004.6848

    // XXX: Hf is not needed (only used in combustion cases):
    Hf          0;
  }

  transport
  {
    // Prandtl number:
    Pr          $__Pr__;

    // "As", "Ts" are the Sutherland constants:
    As          1.458e-6;
    Ts          110.4;
  }

  equationOfState
  {
    R           287.0528;
  }
}
