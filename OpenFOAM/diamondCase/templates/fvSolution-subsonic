FoamFile
{
  version     2.0;
  format      ascii;
  arch        "LSB;label=32;scalar=64";
  class       dictionary;
  location    "system";
  object      fvSolution;
}
//===========================================================================//
#include      "../VarParams"

solvers
{
  p
  {
    solver          GAMG;
    smoother        GaussSeidel;
    nPreSweeps      1;
    nPostSweeps     2;
    tolerance       1e-8;
    relTol          1e-6;
    minIter         3;
  }

  U
  {
    solver          PBiCGStab;  // Or smoothSolver with GaussSeidel?
    preconditioner  DILU;
    tolerance       1e-8;
    relTol          1e-6;
    minIter         3;
  }

  h
  {
    solver          PBiCGStab;  // Or smoothSolver with GaussSeidel?
    preconditioner  DILU;
    tolerance       1e-8;
    relTol          1e-6;
    minIter         3;
  }

  // XXX: Is this always correct?
  rho
  {
    solver          diagonal;
  }
}

SIMPLE
{
  nOuterCorrectors  3;
  nCorrectors       3;
  nNonOrthogonalCorrectors 3;
  pMinFactor        0.1;
  pMaxFactor        2;

  residualControl
  {
    p       1e-3;
    U       1e-3;
    h       1e-3;
  }
}

relaxationFactors
{
  fields
  {
    T       0.5;
    rho     0.01;
  }

  equations
  {
    p       0.5;
    U       0.5;
    h       0.5;
  }
}
